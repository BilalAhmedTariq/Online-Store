<div class="blog-page">
  <h1>{{ blog.title }}</h1>
  <div calss=" row blog-content">
    {% for article in blog.articles %}
      <div class="col-lg-6 col-md-6">
        <a href="{{ article.url }}">
          <h2>
            {{ article.title }}
          </h2>
          <p>{{ article.author }}</p>
        </a>
      </div>
      <div class="col-lg-6 col-md-6 blog-excert">
        {{ article.excerpt }}
      </div>
    {% endfor %}
  </div>
  <div class="col-lg-6 col-md-6 blog-excert">
        {{ article.excerpt }}
      </div>
</div>
